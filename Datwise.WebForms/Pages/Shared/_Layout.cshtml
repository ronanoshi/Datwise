<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Datwise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">Datwise</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <label class="toggle-label">
                        <span class="toggle-icon moon"><i class="bi bi-moon-fill"></i></span>
                        <label class="toggle-switch">
                            <input type="checkbox" id="themeCheckbox">
                            <span class="toggle-slider"></span>
                        </label>
                        <span class="toggle-icon sun"><i class="bi bi-sun-fill"></i></span>
                    </label>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid" style="padding: 0.75rem; display: flex; flex-direction: column; height: calc(100vh - 60px); overflow: hidden;">
        <main role="main" style="flex: 1; overflow: hidden;">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    <script src="~/js/table-sorting.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
