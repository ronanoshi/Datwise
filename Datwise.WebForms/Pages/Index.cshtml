@page
@using Datwise.WebForms.Models
@using Datwise.WebForms.Pages
@model IndexModel
@{
    ViewData["Title"] = "Datwise";
}

<div class="dashboard-container" style="display: flex; flex-direction: column; height: 100%; gap: 0.5rem;">
    <!-- Alert Messages -->
    <div style="flex-shrink: 0;">
        @if (!string.IsNullOrEmpty(Model?.ControlPanel.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @Model.ControlPanel.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model?.ControlPanel.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @Model.ControlPanel.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- Header Section: Stats (left) + Actions (right) -->
    <div class="dashboard-header">
        <!-- Stats Row (Left 2/3) -->
        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="card-body">
                    <div class="stat-label">Total Open</div>
                    <div class="stat-value text-danger">@Model?.ControlPanel.Statistics.TotalOpenIssues</div>
                </div>
            </div>

            <div class="stat-card critical">
                <div class="card-body">
                    <div class="stat-label">Critical</div>
                    <div class="stat-value" style="color: #dc2626;">@Model?.ControlPanel.Statistics.CriticalIssuesCount</div>
                </div>
            </div>

            <div class="stat-card high">
                <div class="card-body">
                    <div class="stat-label">High</div>
                    <div class="stat-value" style="color: #f59e0b;">@Model?.ControlPanel.Statistics.HighSeverityCount</div>
                </div>
            </div>

            <div class="stat-card success">
                <div class="card-body">
                    <div class="stat-label">Resolved</div>
                    <div class="stat-value" style="color: #10b981;">@Model?.ControlPanel.Statistics.ResolvedThisMonth</div>
                </div>
            </div>
        </div>

        <!-- Actions Column (Right 1/3) -->
        <div class="dashboard-actions">
            <a href="/ReportIssue" class="btn btn-danger w-100">
                <i class="bi bi-exclamation-triangle"></i> Report
            </a>
        </div>
    </div>

    <!-- Data Table Section (Fills Remaining Space) -->
    <div class="issues-container" style="flex: 1; min-height: 0;">
        <div class="issues-header">
            <h5 style="margin: 0;"><i class="bi bi-list-check"></i> Open Issues</h5>
        </div>
        <div class="table-wrapper">
            @if (Model?.ControlPanel.OpenIssues != null && Model.ControlPanel.OpenIssues.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th data-sortable="id">ID</th>
                            <th data-sortable="title">Title</th>
                            <th data-sortable="severity">Severity</th>
                            <th data-sortable="status">Status</th>
                            <th data-sortable="department">Dept</th>
                            <th data-sortable="location">Location</th>
                            <th data-sortable="reportedby">By</th>
                            <th data-sortable="date">Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var issue in Model.ControlPanel.OpenIssues)
                        {
                            <tr>
                                <td>
                                    <span class="issue-id">#@issue.Id</span>
                                </td>
                                <td>
                                    <div class="issue-title" title="@issue.Title">@issue.Title</div>
                                </td>
                                <td>
                                    @switch (issue.Severity)
                                    {
                                        case "Critical":
                                            <span class="badge critical">@issue.Severity</span>
                                            break;
                                        case "High":
                                            <span class="badge high">@issue.Severity</span>
                                            break;
                                        case "Medium":
                                            <span class="badge medium">Med</span>
                                            break;
                                        case "Low":
                                            <span class="badge low">Low</span>
                                            break;
                                        default:
                                            <span class="badge">@issue.Severity</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @switch (issue.Status)
                                    {
                                        case "Open":
                                            <span class="badge open">Open</span>
                                            break;
                                        case "In Progress":
                                            <span class="badge in-progress">Prog</span>
                                            break;
                                        case "Resolved":
                                            <span class="badge resolved">Res</span>
                                            break;
                                        default:
                                            <span class="badge">@issue.Status</span>
                                            break;
                                    }
                                </td>
                                <td title="@issue.Department" style="max-width: 80px; overflow: hidden; text-overflow: ellipsis;">@issue.Department</td>
                                <td title="@issue.Location" style="max-width: 80px; overflow: hidden; text-overflow: ellipsis;">@issue.Location</td>
                                <td title="@issue.ReportedBy" style="max-width: 70px; overflow: hidden; text-overflow: ellipsis;">@issue.ReportedBy</td>
                                <td style="white-space: nowrap;">@issue.ReportedDate.ToString("M/d")</td>
                                <td>
                                    <a href="/IssueDetail/@issue.Id" class="btn btn-sm btn-outline-primary">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="empty-state-title">No Open Issues</div>
                    <p class="empty-state-message">Great job! All issues have been resolved or are in progress.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
